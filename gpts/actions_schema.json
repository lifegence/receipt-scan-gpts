{
  "openapi": "3.1.0",
  "info": {
    "title": "Receipt Scanner API",
    "description": "レシートデータをGoogle Spreadsheetに登録するAPI",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://script.google.com/macros/s/YOUR_DEPLOYMENT_ID/exec",
      "description": "Google Apps Script Web App"
    }
  ],
  "paths": {
    "/": {
      "post": {
        "summary": "レシートデータを登録",
        "description": "抽出したレシートデータをGoogle Spreadsheetに追記します",
        "operationId": "addReceipt",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": {
                    "type": "string",
                    "description": "購入日 (YYYY-MM-DD形式)",
                    "example": "2025-10-22"
                  },
                  "store": {
                    "type": "string",
                    "description": "店舗名",
                    "example": "セブンイレブン"
                  },
                  "category": {
                    "type": "string",
                    "description": "カテゴリ（食費、日用品、交通費、娯楽、その他）",
                    "example": "食費"
                  },
                  "total": {
                    "type": "number",
                    "description": "合計金額（数値のみ）",
                    "example": 1234
                  },
                  "tax": {
                    "type": "number",
                    "description": "消費税額（数値のみ）",
                    "example": 91
                  },
                  "paymentMethod": {
                    "type": "string",
                    "description": "支払方法（現金、クレジットカード、電子マネー、QR決済など）",
                    "example": "現金"
                  },
                  "items": {
                    "type": "array",
                    "description": "商品明細の配列",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {
                          "type": "string",
                          "description": "商品名",
                          "example": "おにぎり"
                        },
                        "price": {
                          "type": "number",
                          "description": "単価",
                          "example": 120
                        },
                        "quantity": {
                          "type": "number",
                          "description": "数量",
                          "example": 2
                        }
                      }
                    }
                  },
                  "notes": {
                    "type": "string",
                    "description": "メモ・備考",
                    "example": ""
                  }
                },
                "required": []
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登録成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "Success"
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "rowNumber": {
                          "type": "number",
                          "description": "登録された行番号",
                          "example": 15
                        },
                        "timestamp": {
                          "type": "string",
                          "description": "登録日時",
                          "example": "2025-10-22T12:34:56.789Z"
                        },
                        "message": {
                          "type": "string",
                          "example": "レシートデータを追加しました"
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "不正なリクエスト",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "number",
                      "example": 400
                    },
                    "message": {
                      "type": "string",
                      "example": "Invalid data format"
                    }
                  }
                }
              }
            }
          },
          "500": {
            "description": "サーバーエラー",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "statusCode": {
                      "type": "number",
                      "example": 500
                    },
                    "message": {
                      "type": "string",
                      "example": "Internal Server Error"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
