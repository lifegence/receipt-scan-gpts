{
  "openapi": "3.1.0",
  "info": {
    "title": "Receipt Scanner API",
    "description": "Add receipt data to Google Spreadsheet",
    "version": "2.0.0"
  },
  "servers": [
    {
      "url": "https://script.google.com/macros/s/YOUR_DEPLOYMENT_ID_HERE/exec",
      "description": "URL of the Google Apps Script Web App"
    }
  ],
  "paths": {
    "/exec": {
      "post": {
        "operationId": "addReceipt",
        "summary": "Add receipt to spreadsheet",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": {
                    "type": "string",
                    "description": "Purchase date (YYYY-MM-DD)"
                  },
                  "store": {
                    "type": "string",
                    "description": "Store name"
                  },
                  "category": {
                    "type": "string",
                    "description": "Category (Food/Daily Goods/Transportation/Entertainment/Other - use Japanese: 食費/日用品/交通費/娯楽/その他)"
                  },
                  "total": {
                    "type": "number",
                    "description": "Total amount"
                  },
                  "tax": {
                    "type": "number",
                    "description": "Tax amount"
                  },
                  "paymentMethod": {
                    "type": "string",
                    "description": "Payment method"
                  },
                  "items": {
                    "type": "array",
                    "description": "Purchased items",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {"type": "string"},
                        "price": {"type": "number"},
                        "quantity": {"type": "number"}
                      }
                    }
                  },
                  "notes": {
                    "type": "string",
                    "description": "Additional notes"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successfully added receipt",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "Receipt data has been registered"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
