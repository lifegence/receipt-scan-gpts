{
  "openapi": "3.1.0",
  "info": {
    "title": "Receipt Scanner API",
    "description": "Add receipt data to Google Spreadsheet",
    "version": "2.0.0"
  },
  "servers": [
    {
      "url": "https://script.google.com/macros/s/AKfycbwCJMWjm3uhxSkAphvWPxNVdVj6RjnIjgufEjEeZ_7A8ZqwGGq1PYNWCJcrokHHJW08/exec"
    }
  ],
  "paths": {
    "/": {
      "post": {
        "operationId": "addReceipt",
        "summary": "Add receipt to spreadsheet",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "date": {
                    "type": "string",
                    "description": "Purchase date (YYYY-MM-DD)"
                  },
                  "store": {
                    "type": "string",
                    "description": "Store name"
                  },
                  "category": {
                    "type": "string",
                    "description": "Category (食費/日用品/交通費/娯楽/その他)"
                  },
                  "total": {
                    "type": "number",
                    "description": "Total amount"
                  },
                  "tax": {
                    "type": "number",
                    "description": "Tax amount"
                  },
                  "paymentMethod": {
                    "type": "string",
                    "description": "Payment method"
                  },
                  "items": {
                    "type": "array",
                    "description": "Purchased items",
                    "items": {
                      "type": "object",
                      "properties": {
                        "name": {"type": "string"},
                        "price": {"type": "number"},
                        "quantity": {"type": "number"}
                      }
                    }
                  },
                  "notes": {
                    "type": "string",
                    "description": "Additional notes"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": {"type": "boolean"},
                    "rowNumber": {"type": "number"},
                    "timestamp": {"type": "string"},
                    "message": {"type": "string"}
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
